*{
    margin: 0;
    padding: 0;
}

body{
    text-align: center;
    background: #fff;
    color: rgba(0,0,0,0.6);
}

nav{
    display: flex; 
    background: #ecf0f1;
    align-items: center;
    padding: 10px 12%;
    box-shadow: 0 0 5px rgba(0,0,0,0.9);
    flex-flow: row;
    z-index: 10;
}

nav div{
    display: flex; 
    align-items: center;
    flex-grow: 1;
}

nav div img{
    margin-right: 20px;
}

nav .side-left{
    display: flex; 
    justify-content: flex-start;
}

nav .side-right{
    display: flex; 
    justify-content: flex-end;
}

nav .side-right a{
    text-align: center;
    text-decoration: none;
    color: black;
    margin: 2px;
}

.mdl-button{
    width: 100%;
}

.menu-button{
    display: none;
}

header{
    display: flex; 
    padding: 90px 12%;
    justify-content: space-between;
    color: white;
    text-shadow: 0 0 20px black;
    
        background-image: url("<%= asset_path 'bg-ss.jpg' %>");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
}

